<h2><%= link_to "Categories", root_path %> / <%= @category.title %> / Products </h2>

<ol>
  <% @products.each do |product| %>
    <li>
      <%= product.title %> ($<%= product.price %>)

      <ul>
        <% product.product_variants.each do |variant| %>
          <li><%= variant.title %> ($<%= variant.price %>)</li>
        <% end %>
      </ul>
    </li>
    <% end %>
</ol>
